<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

        <parameters>
            <parameter key="thrace_data_grid.event_listener.data_event.class">Thrace\DataGridBundle\EventListener\DataEventListener</parameter>
        </parameters>

    <services>
        <service id="thrace_data_grid.event_listener.data_event" class="%thrace_data_grid.event_listener.data_event.class%">
        	<tag name="kernel.event_listener" event="thrace_datagrid.onDataReady" method="onDataReady" />
        </service>


    </services>

</container>
